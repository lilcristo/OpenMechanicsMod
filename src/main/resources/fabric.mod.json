{
  "schemaVersion": 1,
  "id": "modid",
  "version": "${version}",

  "name": "OpenMechanicsMod",
  "description": "The OMM mod implements lots of machines and mechanical-related items.",
  "authors": [
    "Made with love and passion by lilcristo (ITALY)"
  ],
  "contact": {
    "homepage": "https://openmechanicsmod.net/",
    "sources": "https://github.com/lilcristo/openmechanics"
  },

  "license": "CC0-1.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.lilcristo.omm.ExampleMod"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.14",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
